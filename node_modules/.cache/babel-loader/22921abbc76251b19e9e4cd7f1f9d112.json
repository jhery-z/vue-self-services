{"ast":null,"code":"import NavbarMenu from '../components/NavbarMenu.vue';\nimport CardProduct from '../components/CardProduct.vue';\nimport axios from 'axios';\nexport default {\n  name: 'HomeView',\n  components: {\n    NavbarMenu,\n    CardProduct\n  },\n\n  data() {\n    return {\n      products: [],\n      currentPage: 1,\n      totalPages: 4,\n      itemsPerPage: 6\n    };\n  },\n\n  mounted() {\n    this.fetchData();\n  },\n\n  methods: {\n    fetchData() {\n      const apiUrl = `https://recruitment.dev.rollingglory.com/api/v2/gifts?page[number]=${this.currentPage}&page[size]=${this.itemsPerPage}`;\n      axios.get(apiUrl).then(response => {\n        this.products = response.data.data;\n        this.totalPages = response.data.meta.totalPages;\n      }).catch(error => {\n        console.error('Error:', error);\n      });\n    },\n\n    nextPage() {\n      if (this.currentPage < this.totalPages) {\n        this.currentPage++;\n        this.fetchData();\n      }\n    },\n\n    prevPage() {\n      if (this.currentPage > 1) {\n        this.currentPage--;\n        this.fetchData();\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAiCA;AACA;AACA;AAEA;EACAA,gBADA;EAEAC;IACAC,UADA;IAEAC;EAFA,CAFA;;EAOAC;IACA;MACAC,YADA;MAEAC,cAFA;MAGAC,aAHA;MAIAC;IAJA;EAMA,CAdA;;EAeAC;IACA;EACA,CAjBA;;EAkBAC;IACAC;MACA;MAEAC,kBACAC,IADA,CACAC;QACA;QACA;MACA,CAJA,EAKAC,KALA,CAKAC;QACAC;MACA,CAPA;IAQA,CAZA;;IAaAC;MACA;QACA;QACA;MACA;IACA,CAlBA;;IAmBAC;MACA;QACA;QACA;MACA;IACA;;EAxBA;AAlBA","names":["name","components","NavbarMenu","CardProduct","data","products","currentPage","totalPages","itemsPerPage","mounted","methods","fetchData","axios","then","response","catch","error","console","nextPage","prevPage"],"sourceRoot":"src/views","sources":["HomeView.vue"],"sourcesContent":["<template>\n  <div class=\"home\">\n    <NavbarMenu/>\n    <h1>Company Logo</h1>\n\n    <div class=\"container\">\n      <div class=\"row\">\n        <div class=\"col-lg-3 col-xs\">\n          <h3>Filter</h3>\n        </div>\n        <div class=\"col-lg-9 col-xs\">\n        <h3>Products List</h3>\n        <div class=\"produk-container\">\n          <div v-for=\"product in products\" :key=\"product.id\">\n           <CardProduct :product=\"product\"/>\n        </div>\n        </div>\n        <!-- Pagination -->\n          <div class=\"pagination justify-content-center align-self-center mt-4\">\n            <button @click=\"prevPage\" :disabled=\"currentPage === 1\">Previous</button>\n            <span>Page {{ currentPage }} of {{ totalPages }}</span>\n            <button @click=\"nextPage\" :disabled=\"currentPage === totalPages\">Next</button>\n          </div>\n        </div>\n      </div>\n\n\n    </div>\n  </div>\n  \n</template>\n\n<script>\nimport NavbarMenu from '../components/NavbarMenu.vue'\nimport CardProduct from '../components/CardProduct.vue'\nimport axios from 'axios'\n\nexport default {\n  name: 'HomeView',\n  components: {\n    NavbarMenu,\n    CardProduct,\n},\n\ndata() {\n  return {\n        products: [],\n        currentPage: 1,\n        totalPages: 4,\n        itemsPerPage: 6,\n      }\n    },\n      mounted() {\n        this.fetchData();\n      },\n      methods: {\n        fetchData() {\n          const apiUrl = `https://recruitment.dev.rollingglory.com/api/v2/gifts?page[number]=${this.currentPage}&page[size]=${this.itemsPerPage}`;\n\n          axios.get(apiUrl)\n            .then(response => {\n              this.products = response.data.data;\n              this.totalPages = response.data.meta.totalPages;\n            })\n            .catch(error => {\n              console.error('Error:', error);\n            });\n        },\n        nextPage() {\n          if (this.currentPage < this.totalPages) {\n            this.currentPage++;\n            this.fetchData();\n          }\n        },\n        prevPage() {\n          if (this.currentPage > 1) {\n            this.currentPage--;\n            this.fetchData();\n          }\n        }\n      }\n    }\n</script>"]},"metadata":{},"sourceType":"module"}